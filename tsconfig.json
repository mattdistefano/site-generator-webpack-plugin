{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "lib": ["es2015"],
      "declaration": true,
      "noEmitHelpers": true,
      "importHelpers": true
  },
  "allowSyntheticDefaultImports": true,
  "include": [
      "./src/**/*"
  ]
}